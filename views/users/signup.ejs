<% layout("/layouts/boilerplate")-%>
<div class="row mt-3">
    <h1 class="col-6 offset-3" >Signup WanderLust</h1>
        <div class="col-4 offset-3">
    <form method="POST" class="needs-validation" action="/signup" novalidate>
         <div class="mb-3">
            <label for="username" class="form-label"><b>Username</b></label>
            <input name="username" type="text" id="username" class="form-control" required />
               <div class="valid-feedback">
            Username Looks good!
        </div>
        </div>
       <!-- email -->
        <div class="mb-3">
            <label for="email" class="form-label"><b>Email</b></label>
            <input name="email" type="email" id="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label"><b>Password</b></label>
            <input name="password" class="form-control" type="password" id="password" required />
        </div>
         <button class="btn btn-success">SignUp</button>
        </div>
       


    </form>
    </div>
    </div>