<%layout("/layouts/boilerplate")-%>
<body>
    <h2 class="edit-form-head">Edit Listings</h2>
    <div class="row">
        <div class="col-8 offset-2">
   <form method="post" action="/listings/<%=updateListing._id%>?_method=PUT" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
         <input value="<%=updateListing.title%>" name="listing[title]" class="form-control" required/>
           <div class="invalid-feedback">
               Title should eb valid
            </div>
               <div class="valid-feedback">
             Title Looks good!
        </div>
    </div>
    <div class="mg-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required ><%=updateListing.description%></textarea>
        <div class="invalid-feedback">
               Please enter a short description
        </div>
    </div>
    <div class="mb-3">
        <label for="image.url">Image Link</label>
         <input value="<%=updateListing.image.url%>" name="listing[image.url]" class="form-control" required/>
          <div class="invalid-feedback">
                Image should be valid
            </div>c
    </div>
    <div class="row">
 <div class="mg-3 col-md-4">
        <label for="price" class="form-label">Price</label>
          <input value="<%=updateListing.price%>" name="listing[price]" class="form-control" required/>
           <div class="invalid-feedback">
              Price should be valid
            </div>
    </div>
     <div class="mg-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input value="<%=updateListing.country%>" name="listing[country]" class="form-control" required/>
         <div class="invalid-feedback">Country should be valid</div>
    </div>
    </div>
    
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input value="<%=updateListing.location%>" name="listing[location]" class="form-control" required/>
         <div class="invalid-feedback">Location should be valid</div>
    </div>
   
        <button class="edit-btn btn btn-dark">Edit</button>
    </form>
    <br>
    </div>
    </div>
    <script src="/js/script.js"></script>
</body>
