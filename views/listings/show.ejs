<% layout("/layouts/boilerplate") -%>
<body>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-8 offset-md-2">

        <!-- Title -->
        <h3 class="text-center my-4"><%= showListing.title %></h3>

        <!-- Responsive Centered Image -->
        <div class="text-center">
          <img 
            src="<%= showListing.image.url %>" 
            alt="Listing-image" 
            class="img-fluid rounded shadow-sm show-img mb-4"
            style="max-width: 600px; width: 100%; height: auto; object-fit: cover;"
          />
        </div>

        <!-- Listing Details -->
        <div class="card-body px-3">
          <p class="card-text">
            <ul class="mt-3">
              <li><%= showListing.description %></li>
              <li>Price: ‚Çπ<%= showListing.price.toLocaleString() %></li>
              <li>Location: <%= showListing.location %></li>
              <li>Country: <%= showListing.country %></li>
            </ul>
          </p>

          <!-- Action Buttons -->
          <div class="d-flex justify-content-center gap-3 flex-wrap mt-4 mb-5">
            <!-- Edit Button -->
            <form method="get" action="/listings/<%= showListing._id %>/edit" class="mb-2">
              <button class="btn btn-outline-primary px-4 py-2 shadow-sm">‚úèÔ∏è Edit</button>
            </form>

            <!-- Delete Button -->
            <form method="post" action="/listings/<%= showListing._id %>?_method=DELETE" class="mb-2"
              onsubmit="return confirm('Are you sure you want to delete this listing?');">
              <button class="btn btn-outline-danger px-4 py-2 shadow-sm">üóëÔ∏è Delete</button>
            </form>
          </div>
        </div>

        <!-- Review Form -->
        <div class="card p-4 shadow-sm mb-5">
          <h4 class="mb-3">Leave a Review</h4>
          <form method="POST" action="/listings/<%= showListing._id %>/reviews" class="needs-validation" novalidate>
            <!-- Rating -->
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <input 
                type="range" 
                class="form-range" 
                min="1" 
                max="5" 
                id="rating" 
                name="review[rating]" 
                required
              />
            </div>
            <!-- Comment -->
            <div class="mb-3">
              <label for="comment" class="form-label">Comment</label>
              <textarea 
                class="form-control" 
                id="comment" 
                name="review[comment]" 
                rows="4" 
                placeholder="Write your review..." 
                required
              ></textarea>
              <div class="invalid-feedback">
               Review Can not be Empty
            </div>
            </div>
            <!-- Submit Button -->
            <button type="submit" class="btn btn-dark">Submit Review</button>
          </form>
        </div>
         <div class="row">
          <h4>All Reviews</h4>
  <% for (let review of showListing.reviews) { %>
    <div class="col-6 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <p class="card-text mb-2"><%= review.comment %></p>
          <p class="card-text">
            <span class="badge bg-warning text-dark">
              <%= review.rating %> ‚òÖ
            </span>
          </p>
          <form method="POST" action="/listings/<%=showListing._id%>/reviews/<%=review._id%>/?_method=DELETE"><button class="btn btn-dark">Delete</button></form>
        </div>
      </div>
    </div>
  <% } %>
</div>

         </div>
        </div>
        
      </div>
    </div>
  </div>
</body>
