<% layout ("/layouts/boilerplate")-%>
<body>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-8 offset-md-2">

        <!-- Title -->
        <h3 class="text-center my-4">Listing Details</h3>

        <!-- Responsive Centered Image -->
        <div class="text-center">
          <img 
            src="<%= showListing.image.url %>" 
            alt="Listing-image" 
            class="img-fluid rounded shadow-sm show-img mb-4"
            style="max-width: 600px; width: 100%; height: auto; object-fit: cover;"
          />
        </div>

        <!-- Listing Details -->
        <div class="card-body px-3">
          <p class="card-text">
            <strong class="fs-4"><%= showListing.title %></strong>
            <ul class="mt-3">
              <li><%= showListing.description %></li>
              <li>Price: &#8377;<%= showListing.price.toLocaleString() %></li>
              <li>Location: <%= showListing.location %></li>
              <li>Country: <%= showListing.country %></li>
            </ul>
          </p>

          <!-- Stylish Buttons with Margin -->
          <div class="d-flex justify-content-center gap-3 flex-wrap mt-4 mb-5">
            
            <!-- Edit Button -->
            <form method="get" action="/listings/<%= showListing._id %>/edit" class="mb-2">
              <button class="btn btn-outline-primary px-4 py-2 shadow-sm">
                ‚úèÔ∏è Edit
              </button>
            </form>

            <!-- Delete Button -->
            <form method="post" action="/listings/<%= showListing._id %>?_method=DELETE" class="mb-2"
              onsubmit="return confirm('Are you sure you want to delete this listing?');">
              <button class="btn btn-outline-danger px-4 py-2 shadow-sm">
                üóëÔ∏è Delete
              </button>
            </form>

          </div>
        </div>

      </div>
    </div>
  </div>
</body>
